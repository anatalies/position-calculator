generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
  //directUrl = env("DIRECT_URL")
}

model Account {
  id         Int      @id @default(autoincrement())
  balance    Float    @default(0.0)    
  profit     Float    @default(0.0)      
  loss       Float    @default(0.0)      
  tradeCount Int      @default(0)        
  trades     Trade[]  // One-to-many relationship
}

model Trade {
  id          Int      @id @default(autoincrement())
  type        TradeType
  result      TradeResult
  currencyPair String
  lotSize     Float
  entryPrice  Float
  exitPrice   Float
  account     Account  @relation(fields: [accountId], references: [id])
  accountId   Int
  createdAt   DateTime @default(now())
}

enum TradeType {
  BUY
  SELL
}

enum TradeResult {
  PROFIT
  LOSS
}
